{
  "name": "@reactionable/cli",
  "version": "1.2.9",
  "description": "Reactionable cli",
  "main": "dist/index.js",
  "bin": {
    "reactionable": "./bin/reactionable"
  },
  "scripts": {
    "start": "yarn link && tsc-watch",
    "build": "rimraf ./dist && yarn lint && tsc && yarn build:copy-templates",
    "build:copy-templates": "rimraf ./dist/**/*.template && cd src && copyfiles ./**/*.template ../dist/ && cd ..",
    "build:doc": "rimraf -rf docs && typedoc",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "jest",
    "postinstall": "ts-dev-tools install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reactionable/reactionable-cli.git"
  },
  "keywords": [
    "reactionable",
    "cli",
    "tools"
  ],
  "author": "ESCEMI <contact@escemi.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reactionable/reactionable-cli/issues"
  },
  "homepage": "https://reactionable.github.io/reactionable-cli",
  "devDependencies": {
    "@ts-dev-tools/core": "^1.3.6",
    "@types/chalk": "^2.2.0",
    "@types/diff": "^4.0.2",
    "@types/figlet": "^1.2.1",
    "@types/inquirer": "^7.3.1",
    "@types/inversify": "^2.0.33",
    "@types/mock-fs": "^4.13.0",
    "@types/mustache": "^4.0.0",
    "@types/parse-github-url": "^1.0.0",
    "@types/reflect-metadata": "^0.1.0",
    "@types/shelljs": "^0.8.8",
    "copyfiles": "^2.4.0",
    "mock-fs": "^4.13.0",
    "mock-spawn": "^0.2.6",
    "rimraf": "^3.0.0",
    "tsc-watch": "^4.2.9",
    "typedoc": "^0.19.2",
    "typedoc-plugin-nojekyll": "^1.0.1"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@typescript-eslint/typescript-estree": "^4.7.0",
    "chalk": "^4.1.0",
    "deepmerge": "^4.2.2",
    "diff": "^5.0.0",
    "esm": "^3.2.25",
    "figlet": "^1.5.0",
    "handlebars": "^4.7.6",
    "inquirer": "^7.3.3",
    "inversify": "^5.0.1",
    "js-ini": "^1.2.0",
    "parse-github-url": "^1.0.2",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "shelljs": "^0.8.4",
    "typescript": "^4.0.5"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": true
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "tsc && lint-staged && pretty-quick --staged",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "env": {
      "es2021": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.[t]s?(x)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "setupFiles": [
      "./src/container.ts"
    ],
    "transform": {
      "\\.template$": "<rootDir>/__tests__/template-preprocessor.js"
    }
  },
  "tsDevTools": {
    "version": "20201024173398-init"
  }
}
