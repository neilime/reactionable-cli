{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*"
],
  "exclude": ["__tests__", "dist", "**/*.spec.ts"]
}
