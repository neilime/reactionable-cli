{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist",
  },
  "exclude": [
    "__tests__",
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}